<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dip">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="start|center"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="start|center"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/opening_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="start"
                android:textSize="15sp"
                android:textStyle="italic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/num_workmates_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/perm_identity"/>

                <TextView
                    android:id="@+id/workmates_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/third_star"
                    android:layout_width="20dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/star_rate"
                    android:layout_gravity="top|center"
                    />

                <ImageView
                    android:id="@+id/second_star"
                    android:layout_width="20dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/star_rate"
                    android:layout_gravity="top|center"
                    />

                <ImageView
                    android:id="@+id/first_star"
                    android:layout_width="20dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/star_rate"
                    android:layout_gravity="top|center"
                    />

            </LinearLayout>

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_marginStart="10dip"
            android:layout_marginEnd="10dip"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="2dip"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/restaurant_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/img_desc" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <View
        android:layout_gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />
</FrameLayout>

