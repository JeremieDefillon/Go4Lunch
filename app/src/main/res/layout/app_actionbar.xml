<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gz.jey.go4lunch.activities.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolBarStyle">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ToolBarStyle"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            app:theme="@style/SearchBarStyle"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/back_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/places_ic_search"
                android:layout_margin="5dp"
                />

            <EditText
                android:id="@+id/search_txt"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:background="@color/colorTransparent"
                android:hint="@string/search_restaurants"/>

            <ImageButton
                android:id="@+id/speech_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_microphone_black_48dp"
                android:layout_margin="5dp"
                />
        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>